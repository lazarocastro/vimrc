{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "suggest.noselect": false,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "python.jediEnabled": false,
  "python.linting.pydocstyleEnabled": false
}
